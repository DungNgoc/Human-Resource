<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".fragment.CreateOrder_Step0Flagment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/lightgray"
        android:padding="0dp"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorWhite">
            <Button
                android:id="@+id/bt_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:textAllCaps="false"
                android:background="@color/colorWhite"
                android:drawableLeft="@drawable/ic_back"
                />
            <TextView
                android:id="@+id/tv_title_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:text="Create Order"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="@color/colorBlack"
                android:background="@color/colorWhite"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/head"
            android:layout_marginTop="5dp"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/tv_step"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="2. Confirm Delivery City and Date"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_step"
                android:background="@color/colorWhite"
                android:gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:text="A TradeZ traveler going to your city will deliver your order. Enter the country your order is coming from anh which city you want it to be delivered to. "
                android:textColor="@color/darkgray"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tv_route"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_guide"
                android:background="@color/colorWhite"
                android:gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Route"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />


            <RelativeLayout
                android:id="@+id/from"
                android:layout_below="@+id/tv_route"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_button_gray">
                <TextView
                    android:id="@+id/tv_from"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="Delivery from"

                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"
                    android:background="@drawable/bg_button_gray"/>
                <EditText
                    android:id="@+id/et_to"
                    android:layout_toRightOf="@+id/tv_from"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/lightgray"
                    android:text="United State of America"
                    android:gravity="center|left"
                    android:textColor="@color/colorBlack"
                    android:textSize="18dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/to"
                android:layout_below="@+id/from"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_button_gray">
                <TextView
                    android:id="@+id/tv_to"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="Delivery to"
                    android:paddingLeft="5dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"
                    android:background="@drawable/bg_button_gray"/>
                <EditText
                    android:id="@+id/tv_country"
                    android:layout_toRightOf="@+id/tv_to"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/lightgray"
                    android:text="Ho Chi Minh City, VN"
                    android:gravity="center|left"
                    android:textColor="@color/colorBlack"
                    android:textSize="18dp" />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_how_long"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/to"
                android:background="@color/colorWhite"
                android:gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="How long are you willing to waits?"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/tv_guide_how_long"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_how_long"
                android:background="@color/colorWhite"
                android:gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:text="The longer period you are ready to wait the more offers you receive and can choose from."
                android:textColor="@color/darkgray"
                android:textSize="15sp" />

            <RelativeLayout
                android:id="@+id/wait"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop ="15dp"
                android:layout_marginLeft ="15dp"
                android:layout_marginRight ="15dp"
                android:layout_below="@+id/tv_guide_how_long"
                android:background="@drawable/bg_button_gray">

                <TextView
                    android:id="@+id/tv_wait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button_gray"
                    android:gravity="left"
                    android:paddingLeft="5dp"

                    android:text="Up to 45 days"
                    android:textColor="@color/colorBlack"
                    android:textSize="18dp" />
                <TextView
                    android:id="@+id/tv_recommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button_gray"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:text="Recommend"
                    android:layout_below="@+id/tv_wait"
                    android:textColor="@color/green"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="14dp"
                    android:paddingLeft="5dp"
                    android:layout_toRightOf="@+id/tv_wait"
                    android:text="by December 24"
                    android:background="@drawable/bg_button_gray"
                    android:textColor="@color/darkgray"
                    android:textSize="18dp" />
                <Button
                    android:id="@+id/bt_down"
                    android:layout_width="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/ic_down"
                    android:gravity="left"
                    android:layout_toRightOf="@+id/tv_date"
                    android:layout_marginLeft="15dp"
                    android:paddingLeft="5dp" />

            </RelativeLayout>

            <Button
                android:id="@+id/bt_nextto"
                android:textColor="@color/colorWhite"
                android:layout_below="@+id/wait"
                android:text="Next"
                android:textSize="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:textAllCaps="false"
                android:background="@drawable/bg_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorWhite"
    tools:context=".fragment.CreateOrder_Step3Flagment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/lightgray"
        android:padding="0dp"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorWhite">
            <Button
                android:id="@+id/bt_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/colorWhite"
                android:drawableLeft="@drawable/ic_back"
                />
            <TextView
                android:id="@+id/tv_title_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/bt_back"
                android:layout_marginLeft="50dp"
                android:layout_alignParentLeft="true"
                android:text="Simple Mobile - Apple iPhone 11 Pro"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:background="@color/colorWhite"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/head"
            android:layout_marginTop="5dp"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/tv_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Choose Offer"
                android:drawableRight="@drawable/ic_help_trans"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bt_offer"
                android:layout_toRightOf="@+id/tv_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="180dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_button_lightblue"
                android:text="0 offer"
                android:textColor="@color/blueTradeZ"
                android:textSize="18sp" />
            <ImageView
                android:id="@+id/imv_image"
                android:layout_below="@+id/bt_offer"
                android:layout_width="139dp"
                android:layout_height="185dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/im_iphone11_pro"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                />
            <Button
                android:id="@+id/bt_line1"
                android:layout_below="@+id/tv_offer_detail"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/lightgray"
                android:gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_below="@+id/bt_offer"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imv_image"
                android:background="@color/colorWhite"
                android:gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:text="Simple Mobile - Apple iPhone 11 Pro "
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="19sp" />
            <TextView
                android:id="@+id/tv_offer_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imv_image"
                android:background="@color/colorWhite"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Offer details   "
                android:drawableRight="@drawable/ic_down"
                android:textColor="@color/blueTradeZ"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/tv_choose_offer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="15dp"

                android:layout_below="@+id/bt_line1"
                android:background="@color/lightgray"
                android:text="CHOOSE OFFER"
                android:gravity="center|left"
                android:textColor="@color/colorBlack"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/tv_choose"
                android:layout_below="@+id/tv_choose_offer"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:paddingLeft="15dp"
                android:background="@color/colorWhite"
                android:text="You have no delivery offers yet."
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/tv_line"
                android:layout_below="@+id/tv_choose"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:paddingLeft="15dp"
                android:background="@color/lightgray"
                android:gravity="center|left"
                android:textColor="@color/colorBlack" />

            <RelativeLayout
                android:id="@+id/requesdelivery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_line"
                android:background="@color/colorWhite">
                <TextView
                    android:id="@+id/tv_request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:layout_gravity="left"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Request Delivery"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/bt_icon"
                    android:layout_below="@+id/tv_request"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/image"
                    android:gravity="left"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
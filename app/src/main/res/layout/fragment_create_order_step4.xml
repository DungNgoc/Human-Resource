<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".fragment.CreateOrder_Step3Flagment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/lightgray"
        android:padding="0dp"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorWhite">
            <Button
                android:id="@+id/bt_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/colorWhite"
                android:drawableLeft="@drawable/ic_back"
                />
            <TextView
                android:id="@+id/tv_title_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/bt_back"
                android:layout_marginLeft="50dp"
                android:layout_alignParentLeft="true"
                android:text="Simple Mobile - Apple iPhone 11 Pro"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:background="@color/colorWhite"/>

        </RelativeLayout>
        <ScrollView
            android:id="@+id/sv_travel"
            android:layout_below="@+id/head"
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent "
            android:background="@color/lightgray">
        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/head"
            android:layout_marginTop="5dp"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/tv_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Choose Offer   "
                android:drawableRight="@drawable/ic_help_trans"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bt_offer"
                android:layout_toRightOf="@+id/tv_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="170dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_button_lightblue"
                android:text="0 offer"
                android:textColor="@color/blueTradeZ"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imv_image"
                android:layout_below="@+id/bt_offer"
                android:layout_width="120dp"
                android:layout_height="170dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/im_iphone11_pro"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                />
            <TextView
                android:id="@+id/bt_line1"
                android:layout_below="@+id/imv_image"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/lightgray"
                android:gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_below="@+id/bt_offer"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imv_image"
                android:background="@color/colorWhite"
                android:gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:text="Simple Mobile - Apple iPhone 11 Pro "
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="19sp" />
            <TextView
                android:id="@+id/tv_offer_detail"
                android:layout_below="@+id/bt_line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Offer details   "
                android:drawableRight="@drawable/ic_down"
                android:textColor="@color/blueTradeZ"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/tv_choose_offer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="15dp"

                android:layout_below="@+id/tv_offer_detail"
                android:background="@color/lightgray"
                android:text="CHOOSE OFFER"
                android:gravity="center|left"
                android:textColor="@color/colorBlack"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/tv_choose"
                android:layout_below="@+id/tv_choose_offer"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingLeft="15dp"
                android:background="@color/colorWhite"
                android:text="You have no delivery offers yet."
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/tv_line"
                android:layout_below="@+id/tv_choose"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:paddingLeft="15dp"
                android:background="@color/lightgray"
                android:gravity="center|left"
                android:textColor="@color/colorBlack" />

            <RelativeLayout
                android:id="@+id/requesdelivery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_line"
                android:background="@color/colorWhite">
                <TextView
                    android:id="@+id/tv_request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:layout_gravity="left"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Request Delivery"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_guide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_request"
                    android:background="@color/colorWhite"
                    android:gravity="left"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="The traveler below have trips planned .......them a direct delivery request to get ...."
                    android:textColor="@color/darkgray"
                    android:textSize="18sp" />
                <RelativeLayout
                    android:id="@+id/panel_travel_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tv_guide"
                    android:background="@color/colorWhite">
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="50dp"

                        android:src="@drawable/ic_avatar1"
                        />
                    <TextView
                        android:id="@+id/tv_name_traveler"
                        android:layout_toRightOf="@+id/profile_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:layout_gravity="left"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:text="Toàn Phan"
                        android:textColor="@color/colorBlack"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_toRightOf="@+id/tv_name_traveler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:gravity="right"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:text="December 24, 2019"
                        android:textColor="@color/darkgray"
                        android:textSize="18dp" />
                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_toRightOf="@+id/profile_image"
                        android:numStars="5"
                        android:rating   = "4"
                        android:layout_marginLeft="15dp"
                        android:progressTint="@color/star"
                        android:layout_below="@+id/tv_name_traveler"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Button
                        android:id="@+id/bt_request"
                        android:layout_toRightOf="@+id/ratingBar"
                        android:textColor="@color/blueTradeZ"
                        android:text="Request delivery"
                        android:textSize="20dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="15dp"
                        android:textAllCaps="false"

                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/bg_button_blue"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/tv_date"/>
                    <TextView
                        android:id="@+id/bt_line2"
                        android:layout_below="@+id/bt_upload_image"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/lightgray"
                        android:gravity="left"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/panel_travel_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/panel_travel_1"
                    android:background="@color/colorWhite">
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"

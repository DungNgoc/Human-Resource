<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".fragment.CreateOrder_Step3Flagment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/lightgray"
        android:padding="0dp"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorWhite">
            <Button
                android:id="@+id/bt_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/colorWhite"
                android:drawableLeft="@drawable/ic_back"
                />
            <TextView
                android:id="@+id/tv_title_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/bt_back"
                android:layout_marginLeft="50dp"
                android:layout_alignParentLeft="true"
                android:text="Simple Mobile - Apple iPhone 11 Pro"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:background="@color/colorWhite"/>

        </RelativeLayout>
        <ScrollView
            android:id="@+id/sv_travel"
            android:layout_below="@+id/head"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent "
            android:background="@color/lightgray">
        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/head"
            android:layout_marginTop="5dp"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/tv_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Choose Offer   "
                android:drawableRight="@drawable/ic_help_trans"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bt_offer"
                android:layout_toRightOf="@+id/tv_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="170dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_button_lightblue"
                android:text="1 offer"
                android:textColor="@color/blueTradeZ"
                android:textSize="18sp" />
            <ImageView
                android:id="@+id/imv_image"
                android:layout_below="@+id/bt_offer"
                android:layout_width="123dp"
                android:layout_height="170dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/im_iphone11_pro"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                />
            <TextView
                android:id="@+id/bt_line1"
                android:layout_below="@+id/imv_image"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/lightgray"
                android:gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp" />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_below="@+id/bt_offer"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imv_image"
                android:background="@color/colorWhite"
                android:gravity="left"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:text="Simple Mobile - Apple iPhone 11 Pro "
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="19sp" />
            <TextView
                android:id="@+id/tv_offer_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_line1"
                android:background="@color/colorWhite"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Offer details   "
                android:drawableRight="@drawable/ic_down"
                android:textColor="@color/blueTradeZ"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/tv_choose_offer"
                android:layout_width="match_parent"
                android:layout_below="@+id/tv_offer_detail"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:background="@color/lightgray"
                android:text="CHOOSE OFFER"
                android:gravity="center|left"
                android:textColor="@color/colorBlack"
                android:textSize="20dp" />
            <RelativeLayout
                android:id="@+id/panel_travel_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_choose_offer"
                android:background="@color/colorWhite">
                <TextView
                android:id="@+id/tv_name_traveler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="ToÃ n Phan"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_toRightOf="@+id/tv_name_traveler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="left"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="45dp"
                    android:text="11 minutes ago"
                    android:textColor="@color/darkgray"
                    android:textSize="18dp" />
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="50dp"
                    android:layout_toRightOf="@+id/tv_date"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="50dp"
                    android:gravity="right"
                    android:src="@drawable/ic_avatar1"
                    />
                <TextView
                    android:id="@+id/bt_line2"
                    android:layout_below="@+id/ratingBar"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/lightgray"
                    android:gravity="left"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp" />
                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:numStars="5"
                    android:rating   = "4"
                    android:layout_marginLeft="15dp"
                    android:progressTint="@color/star"
                    android:layout_below="@+id/tv_name_traveler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_trip_date"
                    android:layout_below="@+id/bt_line2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="left"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:text="Trip date"
                    android:drawableLeft="@drawable/ic_calender"
                    android:textColor="@color/darkgray"
                    android:textSize="18dp" />
                <TextView
                    android:id="@+id/tv_trip_date_details"
                    android:layout_below="@+id/bt_line2"
                    android:layout_toRightOf="@+id/tv_trip_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="left"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:text="November 10, 2019 from United State, America"
                    android:textColor="@color/colorBlack"
                    android:textSize="18dp" />
                <TextView
                    android:id="@+id/tv_total"
                    android:layout_below="@+id/tv_trip_date_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="left"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:text="Total price $ 451"
                    android:textColor="@color/blueTradeZ"
                    android:textSize="18dp" />
                <RelativeLayout
                    android:id="@+id/price_summary"
                    android:layout_below="@+id/tv_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop ="15dp"
                    android:layout_marginLeft ="15dp"
                    android:layout_marginRight ="15dp"
                    android:background="@drawable/bg_button_gray">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button_gray"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Price product  "
                        android:drawableRight="@drawable/ic_help_trans"
                        android:textColor="@color/darkgray"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_price_content"
                        android:layout_toRightOf="@+id/tv_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_button_gray"
                        android:gravity="right"
                        android:paddingLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="15dp"
                        android:text="$ 400"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/tv_tax"
                        android:layout_below="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button_gray"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="US Sale tax   "
                        android:textColor="@color/darkgray"
                        android:drawableRight="@drawable/ic_help_trans"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/tv_tax_content"
                        android:layout_toRightOf="@+id/tv_tax"
                        android:layout_below="@+id/tv_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button_gray"
                        android:gravity="right"
                        android:paddingLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="15dp"
                        android:text="$ 35.2"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/tv_fee"
                        android:layout_below="@+id/tv_tax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button_gray"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="International Delivery fee   "
                        android:drawableRight="@drawable/ic_help_trans"
                        android:textColor="@color/darkgray"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_fee_content"
                        android:layout_toRightOf="@+id/tv_fee"
                        android:layout_below="@+id/tv_tax"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button_gray"
                        android:gravity="right"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="5dp"
                        android:text="$ 15"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp" />

                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_total_price"
                    android:layout_below="@+id/price_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="left"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Estimated total   "
                    android:textColor="@color/colorBlack"
                    android:drawableRight="@drawable/ic_help_trans"
                    android:textSize="19sp" />
                <TextView
                    android:id="@+id/tv_total_content"
                    android:layout_below="@+id/price_summary"
                    android:layout_toRightOf="@+id/tv_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="right"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:text="$ 450.2"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/guide"
                    android:layout_below="@+id/tv_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="left"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="You will proceed to payment page."
                    android:textColor="@color/darkgray"
                    android:textSize="15sp" />
                <Button
                    android:id="@+id/bt_accept"
                    android:layout_below="@+id/bt_SendMessage"
                    android:textColor="@color/colorWhite"
                    android:drawableLeft="@drawable/ic_yes"
                    android:text="Accept Offer"
                    android:textAllCaps="false"
                    android:textSize="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:paddingLeft="7dp"
                    android:elevation="0dp"
                    android:stateListAnimator="@null"
                    android:background="@drawable/bg_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/bt_SendMessage"
                    android:textColor="@color/blueTradeZ"
                    android:layout_below="@+id/guide"
                    android:text="Send Message"
                    android:textSize="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textAllCaps="false"
                    android:drawableLeft="@drawable/ic_mail"
                    android:paddingLeft="7dp"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_button_blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>



        </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>
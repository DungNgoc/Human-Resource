<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.IntroFlagment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_background"
        android:layout_width ="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_2"
        />
    <TextView
        android:id="@+id/tv_title"
        android:text="Shop from abroad"
        android:textColor = "@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity ="left"
        android:padding="15dp" />
    <TextView
        android:id="@+id/tv_description"
        android:layout_below="@+id/tv_title"
        android:text="From games to gadgets, get any product from abroad, delivery by travelers"
        android:padding="15dp"
        android:layout_marginTop="0dp"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"
        />
</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relative_button"
        android:padding="15dp">
        <View
            android:id="@+id/indicator1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/bg_indicator_active" />
        <View
            android:id="@+id/indicator2"
            android:layout_marginLeft="4dp"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/bg_indicator_inactive"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@+id/indicator1"
            />
        <View
            android:id="@+id/indicator3"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/bg_indicator_inactive"
            android:layout_toRightOf="@+id/indicator2" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="3dp"
        android:layout_marginRight="8dp"
        android:gravity="right"
        android:text="Skip"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        />
    <RelativeLayout
        android:id="@+id/relative_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
        android:id="@+id/tv_next"
        android:textColor="@color/colorWhite"
        android:text="Next"
        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:background="@drawable/bg_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </RelativeLayout>




</RelativeLayout>



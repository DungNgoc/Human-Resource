<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    tools:context=".fragment.AddTrip_Step0Flagment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/lightgray"
        android:padding="0dp"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorWhite">
            <Button
                android:id="@+id/bt_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:textAllCaps="false"
                android:background="@color/colorWhite"
                android:drawableLeft="@drawable/ic_back"
                />
            <TextView
                android:id="@+id/tv_title_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:text="Make offer"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:background="@color/colorWhite"/>

        </RelativeLayout>
        <ScrollView
            android:id="@+id/sv_travel"
            android:layout_below="@+id/head"
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent "
            android:background="@color/lightgray">
            <RelativeLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/head"
                android:background="@color/lightgray">

                <RelativeLayout
                    android:id="@+id/rl_trip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@color/colorWhite">
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:text="Offer details"
                        android:textColor="@color/colorBlack"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/rl_trip"
                    android:background="@color/lightgray">

                    <TextView
                        android:id="@+id/tv_whereto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/lightgray"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text="United State, US - Ho Chi Minh City, VN, November 24"
                        android:textColor="@color/blueTradeZ"
                        android:textSize="14dp" />
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_below="@+id/tv_whereto"
                        android:layout_toRightOf="@+id/imv_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:text="Simple Mobile - Apple iPhone 11 Pro \n(64GB)"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp" />
                    <ImageView
                        android:id="@+id/imv_image_2"
                        android:layout_below="@+id/tv_whereto"
                        android:layout_toRightOf="@+id/tv_name"
                        android:background="@color/lightgray"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/im_iphone11_pro"
                        android:scaleType="centerCrop" />
                    <TextView
                        android:id="@+id/tv_offer_detail"
                        android:layout_below="@+id/tv_name"
                        android:drawableRight="@drawable/ic_down"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:background="@color/lightgray"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                       android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text="Order details"
                        android:textColor="@color/blueTradeZ"
                        android:textSize="18dp" />
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_summary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/rl_detail"
                    android:background="@color/colorWhite">

                    <TextView
                        android:id="@+id/tv_summary"
                        android:layout_toRightOf="@+id/imv_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:text="Summary"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:id="@+id/rl_from"
                        android:layout_below="@+id/tv_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/bg_button_gray">
                        <TextView
                            android:id="@+id/tv_from"
                            android:layout_below="@+id/tv_step"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginLeft="15dp"
                            android:text="Date delivery"
                            android:paddingLeft="5dp"
                            android:gravity="left|center"
                            android:textSize="20dp"
                            android:textColor="@color/darkgray"/>
                        <EditText
                            android:id="@+id/et_from"
                            android:layout_below="@+id/tv_step"
                            android:drawableRight="@drawable/ic_calender"
                            android:layout_toRightOf="@+id/tv_from"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginRight="15dp"
                            android:text="Noverber 24, 2019   "
                            android:paddingLeft="25dp"
                            android:gravity="right|center"
                            android:textSize="20dp"
                            android:textColor="@color/colorBlack"
                            android:background="@drawable/bg_button_gray"/>

                    </RelativeLayout>
                    <TextView
                        android:id="@+id/tv_ask"
                        android:layout_below="@+id/rl_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text="Shopper asked to deliver an order before December 24, 2019"
                        android:textColor="@color/colorBlack"
                        android:textSize="15dp" />

                    <RelativeLayout
                        android:id="@+id/rl_reward"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_below="@+id/tv_ask"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/bg_button_gray">
                        <TextView
                            android:id="@+id/tv_reward"
                            android:layout_below="@+id/tv_step"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginLeft="15dp"
                            android:text="Your delivery reward"
                            android:paddingLeft="5dp"
                            android:gravity="left|center"
                            android:textSize="20dp"
                            android:textColor="@color/darkgray"/>
                        <TextView
                            android:id="@+id/et_money"

                            android:layout_toRightOf="@+id/tv_reward"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginRight="15dp"
                            android:text="$10"
                            android:paddingLeft="25dp"
                            android:gravity="right|center"
                            android:textSize="20dp"
                            android:textColor="@color/colorBlack"
                            android:background="@drawable/bg_button_gray"/>

                    </RelativeLayout>
                    <TextView
                        android:id="@+id/tv_fee"
                        android:layout_below="@+id/rl_reward"
                        android:layout_toRightOf="@+id/imv_image"
                        android:drawableLeft="@drawable/ic_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:text="   ADD SHIPPING AND CUSTOMS FEE"
                        android:textColor="@color/darkgray"
                        android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_money"
                            android:layout_width="match_parent"
                            android:layout_below="@+id/tv_fee"
                            android:layout_height="50dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:text="$0"
                            android:paddingLeft="25dp"
                            android:gravity="left|center"
                            android:textSize="20dp"
                            android:textColor="@color/colorBlack"
                            android:background="@drawable/bg_button_gray"/>
                    <TextView
                        android:id="@+id/tv_tax"
                        android:layout_below="@+id/tv_money"
                        android:layout_toRightOf="@+id/imv_image"
                        android:drawableLeft="@drawable/ic_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:text="ADD 8.88% US SALES TAX"
                        android:textColor="@color/darkgray"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/tv_tax_content"
                        android:layout_below="@+id/tv_tax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text="We noticed that you’re traveling from United Stated, US. We will include US sales tac into the final price for the shopper to pay."
                        android:textColor="@color/darkgray"
                        android:textSize="15dp" />
                    <TextView
                        android:id="@+id/tv_mess"
                        android:layout_below="@+id/tv_tax_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:text="Message shopper"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp" />
                    <EditText
                        android:id="@+id/tv_mess_content"
                        android:layout_below="@+id/tv_mess"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:text="Hi! I’m traveling from United State, US to Ho Chi Minh City, VN. I’ll keep you up-to-date about your order and will coordinate a time and place to met closer to delivery."
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp"
                        android:background="@drawable/bg_button_gray"/>
                    <TextView
                        android:id="@+id/tv_line"
                        android:layout_below="@+id/tv_mess_content"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:gravity="left"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:text="Hi! I’m traveling from United State, US to Ho Chi Minh City, VN. I’ll keep you up-to-date about your order and will coordinate a time and place to met closer to delivery."
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp"
                        android:background="@drawable/bg_button_gray"/>

                    <RelativeLayout
                        android:id="@+id/deliver"
                        android:layout_below="@+id/tv_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop ="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight ="15dp"
                        android:background="@color/colorWhite">

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorWhite"
                            android:gravity="left"
                            android:paddingLeft="5dp"
                            android:text="Price product"
                            android:textColor="@color/darkgray"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/tv_price_content"
                            android:layout_toRightOf="@+id/tv_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorWhite"
                            android:gravity="right"
                            android:paddingLeft="5dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:text="$ 400"
                            android:textColor="@color/colorBlack"
                            android:textSize="20dp" />
                        <TextView
                            android:id="@+id/tv_UStax"
                            android:layout_below="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorWhite"
                            android:gravity="left"
                            android:paddingLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="US Sale tax - 8.88%"
                            android:textColor="@color/darkgray"
                            android:textSize="20dp" />
                        <TextView
                            android:id="@+id/tv_to_content"
                            android:layout_toRightOf="@+id/tv_UStax"
                            android:layout_below="@+id/tv_price_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorWhite"
                            android:gravity="right"
                            android:paddingLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="15dp"
                            android:text="$ 35.2"
                            android:textColor="@color/colorBlack"
                            android:textSize="20dp" />
                        <TextView
                            android:id="@+id/tv_reward_content"
                            android:layout_below="@+id/tv_to_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorWhite"
                            android:gravity="left"
                            android:paddingLeft="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="Your delivery reward"
                            android:textColor="@color/darkgray"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/tv_reward_de"
                            android:layout_toRightOf="@+id/tv_reward_content"
                            android:layout_below="@+id/tv_to_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorWhite"
                            android:gravity="right"
                            android:paddingLeft="5dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="5dp"
                            android:text="$ 15"
                            android:textColor="@color/colorBlack"
                            android:textSize="20dp" />


                    </RelativeLayout>
                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_below="@+id/deliver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:text="Total"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/tv_total_money"
                        android:layout_toRightOf="@+id/tv_total"
                        android:layout_below="@+id/deliver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="12dp"
                        android:text="$ 450.2"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:textSize="24sp" />
                    <TextView
                        android:id="@+id/tv_line1"
                        android:layout_below="@+id/tv_total_money"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:gravity="left"
                        android:paddingTop="15dp"
                        android:paddingBottom="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="Hi! I’m traveling from United State, US to Ho Chi Minh City, VN. I’ll keep you up-to-date about your order and will coordinate a time and place to met closer to delivery."
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp"
                        android:background="@drawable/bg_button_gray"/>
                    <TextView
                        android:id="@+id/tv_by_uncheck"
                        android:layout_below="@+id/tv_line1"
                        android:layout_toRightOf="@+id/imv_image"
                        android:drawableLeft="@drawable/ic_check"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:gravity="left"
                        android:layout_marginLeft="15dp"
                        android:text=""
                        android:textColor="@color/darkgray"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/tv_by"
                        android:layout_below="@+id/tv_line1"
                        android:layout_toRightOf="@+id/tv_by_uncheck"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:gravity="left|top"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="5dp"
                        android:text="By making a delivery, I agree to TradeZ’s Terms of Conditions and acknowledge that I am familiar with and agree to abide by the customs rules and regulations of my destination country."
                        android:textColor="@color/darkgray"
                        android:textSize="20dp" />
                    <Button
                        android:id="@+id/bt_nextto"
                        android:layout_below="@+id/tv_by"
                        android:textColor="@color/colorWhite"
                        android:text="Make delivery offer"
                        android:textSize="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:textAllCaps="false"
                        android:layout_marginBottom="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:elevation="0dp"
                        android:stateListAnimator="@null"
                        android:background="@drawable/bg_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>



            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>
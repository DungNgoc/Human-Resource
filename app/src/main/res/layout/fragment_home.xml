<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".fragment.LoginRegisterFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorWhite"
        android:padding="0dp"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_order_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/bg_loginregister_active"
                android:textColor = "@color/colorWhite"/>
            <TextView
                android:id="@+id/tv_travel_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_ordertravel"
                android:gravity="center"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Order"
                android:textStyle="bold"
                android:background="@drawable/bg_ordertravel_inactive"
                android:textColor = "@color/colorWhite"/>
            <TextView
                android:id="@+id/tv_travel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_ordertravel_inactive"
                android:gravity="center"
                android:text="Travel"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"


            android:orientation="horizontal"
            android:background="@color/colorWhite">

            <Button
                android:id="@+id/bt_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:text="Home"
                android:textAllCaps="false"
                android:drawableTop="@drawable/ic_home_active"
                android:background="@color/colorWhite"
                android:textColor="@color/blueTradeZ" />
            <Button
                android:id="@+id/bt_orders"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:gravity="bottom|center"
                android:text="Orders"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"/>
            <Button
                android:id="@+id/bt_travels"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:text="Travels"
                android:textAllCaps="false"
                android:background="@color/colorWhite"
                android:textColor="@color/colorBlack"/>
            <Button
                android:id="@+id/bt_mess"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:text="Message"
                android:textAllCaps="false"
                android:background="@color/colorWhite"
                android:textColor="@color/colorBlack"/>
            <Button
                android:id="@+id/bt_more"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:text="More"
                android:textAllCaps="false"
                android:background="@color/colorWhite"
                android:textColor="@color/colorBlack"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
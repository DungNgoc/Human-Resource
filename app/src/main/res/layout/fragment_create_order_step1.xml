<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorWhite"
    tools:context=".fragment.HomeFlagment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/lightgray"
        android:padding="0dp"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"

            android:background="@color/colorWhite">
            <Button
                android:id="@+id/bt_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:textAllCaps="false"
                android:background="@color/colorWhite"
                android:drawableLeft="@drawable/ic_back"
                />
            <TextView
                android:id="@+id/tv_title_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:text="Create Order"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:background="@color/colorWhite"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/head"
            android:layout_marginTop="5dp"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/tv_step"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="1. Review Product Details"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/productlink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_step"
                android:background="@color/colorWhite"
                android:gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Product link"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/et_link"
                android:layout_below="@+id/productlink"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:text="https://"
                android:paddingLeft="5dp"
                android:gravity="left|center"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:background="@drawable/bg_button_gray"/>

            <Button
                android:id="@+id/bt_next"
                android:layout_width="50dp"
                android:layout_below="@+id/productlink"
                android:layout_toRightOf="@+id/et_link"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="15dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textAllCaps="false"
                android:background="@drawable/bg_button"
                android:drawableTop="@drawable/ic_next"
                />
            <TextView
                android:id="@+id/www"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/et_link"
                android:textColor="@color/blueTradeZ"
                android:textSize="14sp"
                android:clickable="true"
                android:linksClickable="true"
                android:textColorLink="@color/blueTradeZ"
                android:autoLink="web"
                android:drawableLeft="@drawable/ic_global"
                android:text="  www.amabuy.com"/>
            <TextView
                android:id="@+id/tv_product_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/www"
                android:background="@color/colorWhite"
                android:gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Product image(please provide at least one)"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />
            <ImageView
                android:id="@+id/imv_image"
                android:layout_width="139dp"
                android:layout_height="185dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"

                android:layout_below="@+id/tv_product_image"
                android:src="@drawable/im_iphone11_pro"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                />
            <Button
                android:id="@+id/bt_upload_image"
                android:textColor="@color/blueTradeZ"
                android:text="Upload Image"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/ic_camera"
                android:paddingLeft="5dp"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_button_blue"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/imv_image"
                />
            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_upload_image"
                android:background="@color/colorWhite"
                android:gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Product name"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/et_product_name"
                android:layout_below="@+id/tv_product_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Simple Mobile - Apple iPhone 11 Pro..."
                android:paddingLeft="5dp"
                android:gravity="left|center"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:background="@drawable/bg_button_gray"/>
            <TextView
                android:id="@+id/tv_product_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_product_name"
                android:background="@color/colorWhite"
                android:gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Product details "
                android:drawableRight="@drawable/ic_help"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/et_product_details"
                android:layout_below="@+id/tv_product_details"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Enter product details like size, color, model, etc..."
                android:paddingLeft="5dp"
                android:gravity="left|top"
                android:textSize="15sp"
                android:textColor="@color/darkgray"
                android:background="@drawable/bg_button_gray"/>
            <TextView
                android:id="@+id/tv_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_product_details"
                android:background="@color/colorWhite"
                android:gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Price on www.amabuy.com "
                android:drawableRight="@drawable/ic_help"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/et_product_price"
                android:layout_below="@+id/tv_product_price"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="$400"
                android:paddingLeft="5dp"
                android:gravity="left|center"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:background="@drawable/bg_button_gray"/>
            <TextView
                android:id="@+id/tv_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_product_price"
                android:background="@color/colorWhite"
                android:gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Quantity "
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />
            <Button
                android:id="@+id/bt_minus"
                android:layout_width="30dp"
                android:layout_below="@+id/et_product_price"
                android:layout_toRightOf="@+id/tv_quantity"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="200dp"
                android:layout_height="30dp"
                android:gravity="left"
                android:background="@color/colorWhite"
                android:drawableTop="@drawable/ic_minus"
                />
            <TextView
                android:id="@+id/tv_quantity_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/bt_minus"
                android:layout_below="@+id/et_product_price"
                android:background="@color/colorWhite"
                android:gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:text="1"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />
            <Button
                android:id="@+id/bt_add"
                android:layout_width="30dp"
                android:layout_below="@+id/et_product_price"
                android:layout_toRightOf="@+id/tv_quantity_number"
                android:layout_marginTop="13dp"
                android:layout_height="30dp"
                android:gravity="left"
                android:background="@color/colorWhite"
                android:drawableTop="@drawable/ic_add"
                />
            <Button
                android:id="@+id/bt_nextto"
                android:textColor="@color/colorWhite"
                android:layout_below="@+id/tv_quantity"
                android:text="Next"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:background="@drawable/bg_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>



    </RelativeLayout>

</ScrollView>